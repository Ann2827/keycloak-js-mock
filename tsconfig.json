{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "./src",
    "noFallthroughCasesInSwitch": true,
//    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
    "experimentalDecorators": true,
  },
  "include": [
    "lib"
  ],
  "exclude": ["dist", "node_modules", ".github", "__tests__"]
}
